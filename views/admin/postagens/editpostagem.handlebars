<div class="container">
    <h1>Editar postagem!</h1>
    <br>
    <br>
    <div id="status" class="invisible">{{{errormessage}}}</div>
        <form runat="server" class="form-group row" action="/editpostagem" method="post" enctype="multipart/form-data">            
            <div class="col-md-7">
                {{#each postagem}}
                <h5>ID:</h5>
                <input class="form-control" type="text" name="id" readonly="true" value="{{tb_postagem_id}}">
                {{/each}}
                <br>
                <input accept="image/*" type="file" name="img" id="imgInp">
                <br>
                <div class="row">
                    <div class="col">
                        <h5>Tipo de Postagem:</h5>
                        <select class="custom-select" name="tipoPostagem" id="">
                            {{#each tipoPostagem}}
                            <option value="{{tb_tipopostagem_id}}">{{tb_tipopostagem_tipo}}</option>
                            {{else}}
                            <option value="0">Nenhuma postagem cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col">
                        <h5>Adiministrador:</h5>
                        <select class="custom-select" name="adiministrador" id="">
                            {{#each administrador}}
                            <option value="{{tb_administrador_id}}">{{tb_administrador_nome}}</option>
                            {{else}}
                            <option value="0">Nenhum adiministrador cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h5>Pet:</h5>
                        <select class="custom-select" name="pet" id="">
                            {{#each pet}}
                            <option value="{{tb_pet_id}}">{{tb_pet_nome}}</option>
                            {{else}}
                            <option value="0">Nenhum pet cadastrado</option>
                            {{/each}}
                        </select>
                    </div>  
                    <div class="col">
                        <h5>Portador do Pet:</h5>
                        <select class="custom-select" name="protetor" id="">
                            {{#each protetor}}
                            <option value="{{tb_protetor_id}}">{{tb_protetor_nome}}</option>
                            {{else}}
                            <option value="0">Nenhum pet cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <br>
                {{#each postagem}}
                <input class="form-control" placeholder="Título da Postagem" type="text" name="titulo" value="{{tb_postagem_titulo}}">
                <br>
                <textarea placeholder="Conteúdo da sua postagem" class="form-control" type="text" name="conteudo" widht="300" rows="7" >{{tb_postagem_conteudo}}</textarea><br><br>
                <input class="btn btn-block btn-success" type="submit" value="Editar Postagem">
                <br><br>
                
            </div>
            <img id="imagem" class="col-md-4" src="{{tb_postagem_img}}" width="20%" height="30%" alt="Selecione a imagem">
            {{else}}
            <h1>Postagem não encontrada</h1>
            </div>
            {{/each}}
            <script>
                imgInp.onchange = evt => {
                    const [file] = imgInp.files
                    if (file) {
                        imagem.src = URL.createObjectURL(file)
                    }
                }
            </script>
        </form>
</div>