<div class="container ">
    <h1>Lista de postagens</h1>
    <br>
    <a href="/home_adm" style="color: ivory" class="btn btn-success btn">Voltar</a>
    <br>
    <br>
    <div class="row">
        <div class="col-md-8">
            <select class="custom-select" name="tipopostagem" id="idTipopostagem">
                <option value="">Geral</option>
                {{#each tipoPostagem}}
                <option value="{{tb_tipopostagem_id}}">{{tb_tipopostagem_tipo}}</option>
                {{/each}}
            </select>
        </div>
        <input type="button" value="Buscar!" class="btn btn-success col-md-2" onclick="redirecionar()"></input>
        <script>
            function redirecionar() {
                var e = document.getElementById("idTipopostagem");
                var id = e.value;
                document.location.href = "/admpostagem/" + id;
            }
        </script>
    </div>
    <br>
    <h3>Adicionar postagem</h3>
    <a href="/getProtetor" class="btn btn-success btn-block" style="color: ivory;">Cadastrar</a>
    <br>
    <br>
    <table class="table table-bordered table-responsive-sm">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Administrador</th>
                <th scope="col">Tipo Postagem</th>
                <th scope="col">Título</th>
                <th scope="col">Conteúdo</th>
                <th scope="col">IMG</th>
                <th scope="col">Editar</th>
                <th scope="col">Excluir</th>
            </tr>
        </thead>
        <tbody>
            {{#each postagem}}
            <tr>
                <th scope="row">{{ID}}</th>
                <td>{{ADMINISTRADOR}}</td>
                <td>{{TIPOPOSTAGEM}}</td>
                <td>{{TITULO}}</td>
                <td>{{CONTEUDO}}</td>
                <td><img src="{{IMG}}" width="100px" height="100px" /></td>
                <td>
                    <center>
                        <a type="button" class="btn-primary btn" href="/editarpostagem/{{ID}}"
                            disabled="true">Editar</a>
                    </center>
                </td>
                <td>
                    <center>
                        <a type="button" class="btn-primary btn" style="background-color:red; border-color:red"
                            href="/excluirpostagem/{{ID}}" disabled="true">Excluir</a>
                    </center>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<br>