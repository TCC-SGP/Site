<div class="container">
    <h1>Realize sua postagem!</h1><br>
    <br>
    <h2>{{{errorMessage}}}</h2>
    <a href="/admpostagem" style="color: ivory" class="btn btn-success btn">Voltar</a>
    <br>
    <br>    
        <form runat="server" class="form-group row" action="/cadpostagem" method="post" enctype="multipart/form-data">        
            <div class="col-md-7">
                <input accept="image/*" type="file" name="img" id="imgInp" required="true">
                <br><br>
                <div class="row">
                    <div class="col">
                        <h5>Tipo de Postagem:</h5>
                        <select class="custom-select" name="tipoPostagem" id="" required="true">
                            {{#each tPostagem}}
                            <option value="{{tb_tipopostagem_id}}">{{tb_tipopostagem_tipo}}</option>
                            {{else}}
                            <option value="0">Nenhuma postagem cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col">
                        <h5>Administrador:</h5>
                        <select class="custom-select" name="administrador" id="" required="true">
                            {{#each administrador}}
                            <option value="{{tb_administrador_id}}">{{tb_administrador_nome}}</option>
                            {{else}}
                            <option value="0">Nenhum adiministrador cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h5>Pet:</h5>
                        <select class="custom-select" name="pet" id="" required="true">
                            {{#each pet}}
                            <option value="{{tb_pet_id}}">{{tb_pet_nome}}</option>
                            {{else}}
                            <option value="0">Nenhuma postagem cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="col">
                        <h5>Portador do Pet:</h5>
                        <select class="custom-select" name="protetor" id="" required="true">
                            {{#each protetor}}
                            <option value="{{tb_protetor_id}}">{{tb_protetor_nome}}</option>
                            {{else}}
                            <option value="0">Nenhum protetor cadastrado</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <br>
                <input class="form-control" placeholder="Título da Postagem" type="text" name="titulo" required="true">
                <br>
                <textarea placeholder="Conteúdo da sua postagem" class="form-control" type="text" name="conteudo" widht="300" rows="7" maxlength="199" required="true"></textarea><br><br>
                <input class="btn btn-block btn-success" type="submit" value="Fazer Postagem">
                <br><br>
            </div>
            <img id="imagem" class="col-md-4" src="#" width="20%" height="30%" alt="Selecione a imagem">
            <script>
                imgInp.onchange = evt => {
                    const [file] = imgInp.files
                    if (file) {
                        imagem.src = URL.createObjectURL(file)
                    }
                }
            </script>
        </form>
</div>