<div class="container ">
    <h1>Lista de doações</h1>
    <br>
    <div class="row">
        <div class="col-10">
            <a href="/doe" style="color: ivory" class="btn btn-success btn">Página de Doação</a>
        </div>
        <div class="col">
            <a href="/logout" style="color: ivory" class="btn btn-success btn" >Sair</a>
        </div>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-8">
        </div>
        <script>
        </script>
    </div>
    <br>
    <br>
    <table class="table table-bordered table-responsive-sm">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tipo doação</th>
                <th scope="col">Descrição</th>
                <th scope="col">Quantia</th>
                <th scope="col">Continuar</th>
            </tr>
        </thead>
        <tbody>
            {{#each doacoes}}
            <tr>
                <th scope="row">{{ID}}</th>
                <td>{{TIPO}}</td>
                <td>{{DESCRICAO}}</td>
                <td>{{QUANTIA}}</td>
                <td>{{#if (continuar_doando TIPOID)}}
                        <center>
                            <form action="/continuar_apadrinhando" method="POST">
                                <input type="hidden" name="doacao" value="{{ID}}">
                                <button style="background-color:rgb(18, 73, 110); width: 200px; height: 70px" class="btn btn-success btn-block" type="submit">Continuar Apadrinhando</button>
                            </form>
                        </center>
                    {{else}}
                        
                    {{/if}}
                </td>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>
<br>