<h2 align="center">Ajude-nos! Adote ou Apadrinhe</h2>
<br>
<div class="container">
  <div class="row mb-5">
    {{#each adocao}}
    <div class="col-lg grade-menu">
      <div class="row">
        <div class="col-sm-4">
          <img class="imagens" src="{{tb_postagem_img}}" width="120px" height="120px">
        </div>
        <div class="col-sm-7">
          <h5>{{tb_postagem_titulo}}</h5>
          <p style="max-width: 100px;
           overflow: hidden;
           text-overflow: ellipsis;
           white-space: nowrap;">
            {{tb_postagem_conteudo}}
          </p>
        </div>
      </div>
      <br>
      <div class="text-center">
              <a href="/form_adocao/{{tb_pet_id}}&{{tb_postagem_id}}&{{tb_protetor_id}}" class="btn btn-sm btn-block btn-success" style="color:white">Adote</a>
        </div>
      <br>
    </div>
    {{/each}}
  </div>

  <hr>
  <div class="w-100"></div>

  <div class="row mb-5">
    {{#each apadrinhamento}}
    <div class="col-lg grade-menu">
      <div class="row">
        <div class="col-sm-4">
          <img class="imagens" src="{{tb_postagem_img}}" width="120px" height="120px">
        </div>
        <div class="col-sm-7">
          <h5>{{tb_postagem_titulo}}</h5>
          <p style="max-width:300px;
          max-height:min-content;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;">
            {{tb_postagem_conteudo}}:rgb(4, 99, 99)
          </p>
        </div>
      </div>
      <br>
      <div class="text-center">
            <a href="/form_apadrinhamento/{{tb_pet_id}}&{{tb_postagem_id}}&{{tb_protetor_id}}" class="btn btn-sm btn-block btn-success" style="color:white">Apadrinhe</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>
